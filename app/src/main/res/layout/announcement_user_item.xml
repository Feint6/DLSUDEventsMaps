<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <TextView
            android:id="@+id/uTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Topic of Announcement"
            android:textColor="#167417"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uSender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uTopic"
            android:layout_marginLeft="10dp"
            android:text="Sender of Announcement"
            android:textColor="@color/quantum_grey700"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/uAnnouncement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uSender"
            android:layout_marginLeft="10dp"
            android:text="Announcement"
            android:textColor="#000"
            android:textSize="23sp"
            android:textStyle="normal" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>