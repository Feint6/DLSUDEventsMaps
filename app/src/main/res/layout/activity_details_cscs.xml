<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsCSCS">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="College of Science (COS) Building"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#167417"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@drawable/dlsud_cscs"
            android:layout_margin="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Description"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#167417"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  The COS Building is the building situated nearest to the Magtagumpay Gate and serves the students of the CSCS. It has ten classrooms and also houses the laboratories for students majoring in Computer Studies as well department offices under CSCS. Additionally, the COS Building also houses the faculty rooms of Biological Sciences, Physical Sciences, Computer Studies, and Mathematics departments, and Graduate Studies."
            android:layout_margin="10dp"
            android:textSize="15sp"/>



    </LinearLayout>

</ScrollView>